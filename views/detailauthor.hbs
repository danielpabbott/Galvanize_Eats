<div class="row top">
  <div class="col m2 offset-m1">
    <img src="{{author.portrait_url}}" class="detailimg">
  </div>
  <div class="col m6 offset-m2">
    <div class="card blue-grey darken-1">
      <div class="card-content white-text">
        <span class="card-title"><h5>{{author.first_name}} {{author.last_name}}</h5></span>
        <p>{{author.biography}}</p>
      </div>
      <div class="card-action">
        <div class="row">
          <div class="col m4 left">
            <a href="/{{author.id}}/editauthor"><i class="material-icons">mode_edit</i></a>
          </div>
          <div class="col m4 center">
            <a href="/authors">Back to Authors</a>
          </div>
          <div class="col m4 right">
            <a href="/{{author.id}}/deleteauthor" class="right"><i class="material-icons">delete</i></a>
          </div>
        </div>
      </div>
    </div>
    <div class="card-action center">
    </div>
  </div>
</div>
