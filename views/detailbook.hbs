<div class="row top">
  <div class="col m2 offset-m1">
    <img src="{{book.cover_url}}" class="detailimg">
  </div>
  <div class="col m6 offset-m2">
    <div class="card blue-grey darken-1">
      <div class="card-content white-text">
        <span class="card-title"><h5>{{book.title}}</h5></span>
        <p>{{book.genre}}</p>
        <p>{{book.description}}</p>
      </div>
      <div class="card-action">
        <div class="row">
          <div class="col m4 left">
            <a href="/{{book.id}}/editbook"><i class="material-icons">mode_edit</i></a>
          </div>
          <div class="col m4 center">
            <a href="/books">Back to Books</a>
          </div>
          <div class="col m4 right">
            <a href="/{{book.id}}/deletebook" class="right"><i class="material-icons">delete</i></a>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
